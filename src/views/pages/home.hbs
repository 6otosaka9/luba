<div class="container center mt-4">
    <div class="row">
        <div class="col">
            <div class="col-md-8 mx-auto">
                {{#if user}}
                <div class="card mt-auto border border-success rounded-5">
                    <div class="card-body center">
                        User name: <span class="font-weight-bold">{{user.userName}}</span>
                        {{else}}
                        <h1><a href="/signup">Sign up</a>or <a href="/signin"> sign in </a>to get started</h1>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>