<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card mt-auto border border-success rounded-5">
                <div class="card-body center">
                    <form action="/signup" method="POST">
                        <img src="https://i.ibb.co/6rCcYbf/bitmap.png" alt="bitmap" border="0" class="w-50">
                    <h4 class="card-title mb-4 mt-4 text-success">Register</h4>
                    <div class="border border-success input-group mb-3 shadow rounded">
                        <span class="input-group-text" id="basic-addon1"><i
                                class="fas fa-user fs-2 bg-transparent text-success"></i></span>
                        <input type="text" class="form-control" placeholder="Full name" aria-label="Full name"
                            aria-describedby="basic-addon1" name="fullName">
                    </div>
                    <div class="border border-success input-group mb-3 shadow rounded">
                        <span class="input-group-text rounded-start-5" id="basic-addon1"><i
                                class="fas fa-at fs-2 bg-transparent text-success"></i></span>
                        <input type="text" class="form-control" placeholder="Username" aria-label="Username"
                            aria-describedby="basic-addon1" name="userName">
                    </div>

                    <div class="border border-success input-group mb-3 shadow rounded">
                        <span class="input-group-text" id="basic-addon1"><i
                                class="fas fa-envelope fs-2 bg-transparent text-success"></i></span>
                        <input type="mail" class="form-control" placeholder="Your mail" aria-label="Your mail"
                            aria-describedby="basic-addon1" name="email">
                    </div>

                    <div class="border border-success input-group mb-3 shadow rounded">
                        <span class="input-group-text"><i
                                class="fas fa-lock fs-2 bg-transparent text-success"></i></span>
                        <input type="password" class="form-control" placeholder="Your new password"
                            aria-label="Your new password" name="password">
                    </div>
                    <button class="btn btn-success">Complete Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>